<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label I18n.t("registrations.signup_form.name") %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label I18n.t("form.notes.starts_on") %>
    <%= form.datetime_select :starts_on %>
  </div>

  <div class="field">
    <%= form.label :ends_on %>
    <%= form.datetime_select :ends_on %>
  </div>

  <div class="field">
    <%= form.label I18n.t("form.detail") %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label I18n.t("form.code") %>
    <%= form.text_field :degit_code %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
