<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: {class: "form-horizontal form-bordered form-control-borderless",
             id: "form-register"},
             remote: true) do |f| %>
  <div id="notice">

  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-user"></i></span>
        <%= f.text_field :name, placeholder: t(".name"),
                         class: "form-control input-lg" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
        <%= f.email_field :email, placeholder: t(".email"),
                          class: "form-control input-lg" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-phone_alt"></i></span>
        <%= f.phone_field :phone, placeholder: t(".phone"),
                          class: "form-control input-lg" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-address_book"></i></span>
        <%= f.text_field :address, placeholder: t(".address"),
                          class: "form-control input-lg" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
        <%= f.password_field :password, placeholder: t(".pass"),
                          class: "form-control input-lg" %>
      </div>
    </div>
  </div>

 <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
        <%= f.password_field :password_confirmation, placeholder: t(".confirm"),
                          class: "form-control input-lg" %>
      </div>
    </div>
 </div>

  <div class="form-group form-actions">
    <div class="col-xs-12 text-center">
      <%= f.submit class: "btn btn-sm btn-success" do %>
        <i class="fa fa-plus"></i> Register Account
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 text-center">
      <%= link_to new_user_session_path, remote: true do %>
        <small><%= "Đăng nhập" %></small>
      <% end %> -
      <%= link_to root_path, remote: true do %>
        <small>Nhập mã code</small>
      <% end %>
    </div>
  </div>
<% end %>
