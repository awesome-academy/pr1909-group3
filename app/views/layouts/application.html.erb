<!DOCTYPE html>
<html>
  <head>
    <title>DL-CHAT</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim'%>
  </head>

  <body>
    <div id="page-wrapper">
      <div id="page-container">
        <div id="main-container">
          <%= render "layouts/dashboard/navbar" %>
          <div id="page-content">
            <%= yield %>
          </div>
          <%= render "layouts/footer" %>
        </div>
      </div>
      <%= render "shared/modal" %>
    </div>
  </body>
</html>
