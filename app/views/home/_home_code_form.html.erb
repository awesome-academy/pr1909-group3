<%= form_tag join_by_code_events_path,  method: :post,
 authenticity_token: true, :class => "form-horizontal form-bordered form-control-borderless", :id => "enter-event", remote: true do %>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
        <%= text_field_tag :degit_code, "",id: "login-email", class: "form-control input-lg", placeholder: t("detail.placeholder") %>
      </div>
    </div>
  </div>

  <div class="form-group form-actions">
    <div class="col-xs-12 text-center">
      <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-angle-right"></i><%= t("detail.placeholder")%></button>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12 text-center">
      <%= link_to new_user_session_path, remote: true do %>
        <small><%= I18n.t ("sessions.login_form.login") %> </small>
      <% end %>
-
      <%= link_to new_user_registration_path, remote: true do %>
        <small><%= I18n.t ("registrations.signup_form.text") %></small>
      <% end %>
    </div>
  </div>
<% end %>
